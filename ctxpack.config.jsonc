{
  "$schema": "https://ctxpack.dev/schema.json",
  "server": {
    "endpoint": "http://localhost:8787"
  },
  "storage": {
    "root": "/root/.ctxpack",
    "repos": "/root/.ctxpack/repos",
    "data": "/root/.ctxpack/data",
    "logs": "/root/.ctxpack/logs"
  },
  "provider": {
    "id": "openai",
    "model": "text-embedding-3-small",
    "apiKeyEnv": "OPENAI_API_KEY"
  },
  "models": {
    "embedding": "text-embedding-3-small",
    "chat": "gpt-5.2-codex"
  },
  "defaults": {
    "searchMode": "hybrid",
    "alpha": 0.5,
    "topK": 10
  },
  "resources": []
}

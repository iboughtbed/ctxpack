{
  "name": "ctxpack-turbo",
  "packageManager": "bun@1.3.7",
  "private": true,
  "engines": {
    "node": ">=18",
    "bun": ">=1.3.7"
  },
  "scripts": {
    "build": "dotenv -- turbo run build",
    "dev": "dotenv -- turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "db:push": "dotenv -- bun --filter @repo/db push",
    "db:generate": "dotenv -- bun --filter @repo/db generate",
    "db:migrate": "dotenv -- bun --filter @repo/db migrate",
    "db:studio": "dotenv -- bun --filter @repo/db studio",
    "server:dev": "dotenv -- turbo run dev --filter=honojs",
    "web:dev": "dotenv -- turbo run dev --filter=nextjs",
    "web:build": "dotenv -- turbo run build --filter=nextjs",
    "web:start": "dotenv -- bun --filter nextjs start",
    "web:lint": "dotenv -- turbo run lint --filter=nextjs",
    "cli:dev": "dotenv -- bun run --cwd apps/cli dev",
    "cli:start": "dotenv -- bun run --cwd apps/cli start",
    "cli:run": "dotenv -- bun run apps/cli/src/index.tsx",
    "changeset": "bunx @changesets/cli",
    "version-packages": "bunx @changesets/cli version",
    "release": "bun run --cwd apps/cli build && bunx @changesets/cli publish"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "catalog:",
    "@repo/prettier-config": "workspace:*",
    "dotenv-cli": "catalog:",
    "prettier": "catalog:",
    "prettier-plugin-tailwindcss": "catalog:",
    "turbo": "^2.8.3",
    "typescript": "catalog:"
  },
  "workspaces": {
    "catalog": {
      "@ianvs/prettier-plugin-sort-imports": "^4.7.0",
      "@types/node": "^22",
      "@types/bun": "latest",
      "better-auth": "^1.4.18",
      "dotenv-cli": "^11.0.0",
      "eslint": "^9.39.1",
      "prettier": "^3.7.4",
      "prettier-plugin-tailwindcss": "^0.7.1",
      "typescript": "5.9.2",
      "zod": "^4.3.6"
    },
    "packages": [
      "apps/*",
      "packages/*",
      "tooling/*"
    ]
  },
  "prettier": "@repo/prettier-config"
}
